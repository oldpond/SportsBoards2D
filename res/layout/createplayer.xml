<?xml version="1.0" encoding="utf-8"?>
<!-- This is the menu for creating a new player -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

	<ScrollView
	
		android:id="@+id/scrllvwNo1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"> 
		
		<LinearLayout
			
			android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical">
			
		    <TextView 
		        android:id="@+id/playername_first_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_first_name"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		    <EditText
		        android:id="@+id/playername_first_edit"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:scrollHorizontally="true"
		        android:autoText="false"
		        android:capitalize="characters"
		        android:gravity="fill_horizontal"
		        android:imeOptions="actionDone"
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:inputType="textCapWords" />
		        
		    <TextView 
		        android:id="@+id/playername_last_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_last_name"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		    <EditText
		        android:id="@+id/playername_last_edit"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:scrollHorizontally="true"
		        android:gravity="fill_horizontal"
		        android:imeOptions="actionDone"
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:inputType="textCapWords" />
		    
		
		    <TextView
		        android:id="@+id/playernum_view"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:text="@string/enter_jersey"
		        android:gravity="left"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		            
		    <EditText
		        android:id="@+id/playernum_edit"
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:scrollHorizontally="true"
		     	android:imeOptions="actionDone"		        
		        android:gravity="fill_horizontal"
		        android:textAppearance="?android:attr/textAppearanceLarge" 
		        android:inputType="number"/>
		     
		    <TextView 
				android:layout_width="fill_parent"
       			android:layout_height="wrap_content"
       			 android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
        		android:layout_marginTop="10dip"
        		android:text="@string/position_prompt" />
        		
        	 <Spinner 
		        android:id="@+id/spinner"
		         android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:prompt="@string/position_prompt"
    		/>
        
			
		</LinearLayout>
			
	</ScrollView>
	
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px" >
        
			<Button 
				android:id="@+id/ok_button" 
		    	android:layout_width="100dip" 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentLeft="true"
	            android:layout_marginLeft="17px"
	            android:text="OK" 
	            android:onClick="okClicked" />

	    	<Button 
				android:id="@+id/cancel_button" 	    	
	    		android:layout_width="100dip" 
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/ok_button"
	            android:layout_alignTop="@+id/ok_button"
	            android:text="Cancel"
	            android:onClick="cancelClicked" />
	            <!-- Put an ad here? -->
	</RelativeLayout>			

</LinearLayout>
